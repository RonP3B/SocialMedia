<section>
  <div class="card mt-3 mb-3">
    <div class="card-header text-center">
      <h5 class="mb-0">Edit post</h5>
    </div>
    <div class="card-body">
      <form
        action="/home/edit-post"
        method="POST"
        enctype="multipart/form-data"
        id="form-default"
      >
        <input name="_csrf" value="{{csrfToken}}" type="hidden" />
        <input type="hidden" name="id" value="{{post.id}}" />
        {{#if post.postImage}}
        <div class="form-img mb-2">
          <img
            src="/assets/images/uploadedImages/{{post.postImage}}"
            alt="user"
            id="image-added"
          />
          <div class="form-img-flex">
            <div>
              <input
                type="file"
                accept="image/*"
                name="image"
                id="add-image"
                class="d-none"
              />
              <input
                class="form-control form-control-sm required"
                type="text"
                id="image-name"
                value="{{#if imgName}}{{imgName}}{{/if}}"
                disabled
              />
              <label for="add-image" class="label-btn">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="1em"
                  height="1em"
                  preserveAspectRatio="xMidYMid meet"
                  viewBox="0 0 24 24"
                ><path
                    fill="currentColor"
                    d="M18 15v3h-3v2h3v3h2v-3h3v-2h-3v-3h-2m-4.7 6H5c-1.1 0-2-.9-2-2V5c0-1.1.9-2 2-2h14c1.1 0 2 .9 2 2v8.3c-.6-.2-1.3-.3-2-.3c-1.1 0-2.2.3-3.1.9L14.5 12L11 16.5l-2.5-3L5 18h8.1c-.1.3-.1.7-.1 1c0 .7.1 1.4.3 2Z"
                  ></path>
                </svg>
              </label>
            </div>
          </div>
        </div>
        {{/if}}
        {{#if post.postText}}
        <div class="form-group mb-2">
          <label for="post">Edit text:</label>
          <textarea
            class="form-control form-control-sm required"
            name="postText"
            id="post-text"
            cols="30"
            rows="10"
          >{{post.postText}}</textarea>
        </div>
        {{/if}}
        <div class="buttons-container">
          <a href="/home" class="btn btn-sm btn-secondary">Go back</a>
          <button
            class="btn btn-sm btn-primary"
            type="button"
            id="btn-submit"
          >Edit</button>
        </div>
      </form>
    </div>
  </div>
</section>