<section>
  <h1 class="text-center">My Notifications</h1>
  {{#each notifications}}
  <div class="card mb-3">
    <div class="card-header">
      Friendship request
    </div>
    <div class="card-body d-flex justify-content-between align-items-center">
      <h6 class="mb-0">{{this.username}}</h5>
      <div>
        <a 
          href="/notifications/decline-friend/{{this.id}}" 
          class="btn btn-sm btn-danger"
        >Decline</a>
        <a 
          href="/notifications/accept-friend/{{this.id}}"
          class="btn btn-sm btn-success"
        >Accept</a>
      </div>
    </div>
  </div> 
  {{else}}
  <h5 class="text-center mt-5">There are no notifications to show</h5>
  {{/each}}
</section>